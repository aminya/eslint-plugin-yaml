{
  "name": "eslint-plugin-yaml",
  "version": "0.5.0",
  "description": "Lint YAML files",
  "homepage": "https://github.com/aminya/eslint-plugin-yaml#readme",
  "bugs": {
    "url": "https://github.com/aminya/eslint-plugin-yaml/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aminya/eslint-plugin-yaml.git"
  },
  "license": "MIT",
  "author": "Amin Yahyaabadi, Peter deHaan",
  "type": "module",
  "main": "dist/index.cjs",
  "files": [
    "src/**",
    "dist/**"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier . --write",
    "lint": "eslint . --fix",
    "prepare": "pnpm run build",
    "test": "eslint ./**/*.yml ./**/*.yaml",
    "test-link": "pnpm link .",
    "test.format": "prettier . --check",
    "test.lint": "eslint ."
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "jshint": "^2.13.6"
  },
  "devDependencies": {
    "@types/eslint": "8.56.10",
    "@types/js-yaml": "^4.0.9",
    "@types/jshint": "^2.12.4",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "eslint": "^8",
    "eslint-config-atomic": "^1.21.2",
    "prettier": "^3.2.5",
    "prettier-config-atomic": "^4.0.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "yaml",
    "yml",
    "eslint-plugin-yaml",
    "eslint-plugin-yml"
  ]
}
