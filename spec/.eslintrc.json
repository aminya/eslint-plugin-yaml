{
  // JS Files
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "globals": { "atom": "writable" },
  "parserOptions": {
    "ecmaFeatures": { "jsx": true },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "overrides": [
    // YAML files
    {
      "files": ["*.yaml", "*.yml"],
      "plugins": ["yaml"]
    }
  ]
}
